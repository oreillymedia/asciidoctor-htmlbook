<%#encoding:UTF-8%>
<% if @level == 0 %><%
if title == 'Colophon' %>
<section data-type="colophon"<%= attr?('id') ? %( id="#{attr 'id'}") : nil %>>
<%= %(<h1) %>><%= title %><%= %(</h1>) %>

<%= content %>
</section><%
elsif title == 'Index' %>
<section data-type="index"<%= attr?('id') ? %( id="#{attr 'id'}") : nil %>>
<%= %(<h1) %>><%= title %><%= %(</h1>) %>

<%= content %>
</section><%
else %>
<div data-type="part"<%= attr?('id') ? %( id="#{attr 'id'}") : nil %>>
<%= %(<h1) %>><%= title %><%= %(</h1>) %>

<%= content %>
</div><%
end %><% else %><%
title_html = %(#{@caption}#{title})
title_html = %(<a name="#{@id}" class="anchor" href="#{@id}">#{title_html}</a>) if (attr? 'anchors')
title_html = %(#{sectnum} #{title_html}) if !@special && (attr? 'numbered') && @level < 4
%>

<% if @level == 1 %>
<% if sectname == 'preface' and title == 'Foreword' %>
<section data-type="foreword"<%= attr?('id') ? %( id="#{attr 'id'}") : nil %>>
<%= %(<h#{@level}) %>><%= title %><%= %(</h#{@level}>) %>

<%= content %>
</section>
<% elsif sectname == 'preface' %>
<section data-type="preface"<%= attr?('id') ? %( id="#{attr 'id'}") : nil %>>
<%= %(<h#{@level}) %>><%= title %><%= %(</h#{@level}>) %>

<%= content %>
</section>
<% elsif sectname == 'appendix' %>
<section data-type="appendix"<%= attr?('id') ? %( id="#{attr 'id'}") : nil %>>
<%= %(<h#{@level}) %>><%= title %><%= %(</h#{@level}>) %>

<%= content %>
</section>
<% elsif title == 'Glossary' %>
<section data-type="glossary"<%= attr?('id') ? %( id="#{attr 'id'}") : nil %>>
<%= %(<h#{@level}) %>><%= title %><%= %(</h#{@level}>) %>

<%= content %>
</section>
<% elsif title == 'Dedication' %>
<section data-type="dedication"<%= attr?('id') ? %( id="#{attr 'id'}") : nil %>>
<%= %(<h#{@level}) %>><%= title %><%= %(</h#{@level}>) %>

<%= content %>
</section>
<% elsif title == 'Index' %>
<section data-type="index"<%= attr?('id') ? %( id="#{attr 'id'}") : nil %>>
<%= %(<h#{@level}) %>><%= title %><%= %(</h#{@level}>) %>

<%= content %>
</section>
<% else %>
<section data-type="chapter"<%= attr?('id') ? %( id="#{attr 'id'}") : nil %>>
<%= %(<h#{@level}) %>><%= title %><%= %(</h#{@level}>) %>

<%= content %>
</section>
<% end %><% end %>

<% if @level == 2 %>
<section data-type="sect1"<%= attr?('id') ? %( id="#{attr 'id'}") : nil %>>
<h1><%= title %></h1>
<%= content %>
</section>
<% end %>

<% if @level == 3 %>
<section data-type="sect2"<%= attr?('id') ? %( id="#{attr 'id'}") : nil %>>
<h2><%= title %></h2>
<%= content %>
</section>
<% end %>

<% if @level == 4 %>
<section data-type="sect3"<%= attr?('id') ? %( id="#{attr 'id'}") : nil %>>
<h3><%= title %></h3>
<%= content %>
</section>
<% end %>

<% if @level == 5 %>
<section data-type="sect4"<%= attr?('id') ? %( id="#{attr 'id'}") : nil %>>
<h4><%= title %></h4>
<%= content %>
</section>
<% end %><% end %>
